<?xml version="1.0" encoding="UTF-8"?>
<globalConfig xmlns="http://zstack.org/schema/zstack">
    <config>
        <category>rest</category>
        <name>completedApi.expiredPeriod</name>
        <description>How long a completed API can stay in the database before it's deleted, in seconds</description>
        <defaultValue>10800</defaultValue>
        <type>java.lang.Integer</type>
    </config>

    <config>
        <category>rest</category>
        <name>expiredApi.scanInterval</name>
        <description>The interval the GC thread scans the database for completed, expired API records, in seconds</description>
        <defaultValue>3600</defaultValue>
        <type>java.lang.Integer</type>
    </config>

    <config>
        <category>rest</category>
        <name>enable.user.connection.ip.whitelist</name>
        <description>Whether to open user connection ip whitelist</description>
        <defaultValue>false</defaultValue>
        <type>java.lang.Boolean</type>
    </config>

    <config>
        <category>rest</category>
        <name>user.connection.ip.whitelist</name>
        <description>user connection ip whitelist</description>
        <defaultValue>[{"ipAddressRangeType": "IpRange", "ip": "0.0.0.0-255.255.255.255", "state": "Enabled"}]</defaultValue>
        <type>java.lang.String</type>
    </config>
</globalConfig>
